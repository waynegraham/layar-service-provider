<head>
  <meta charset="utf-8" />
  <title>Rails Layar Service Provider</title>
  <meta name="description" content="LayAR Service provider" />
  <meta name="author" content="Wayne Graham" />
  <%= stylesheet_link_tag ('style') %>
  <%= javascript_include_tag ('libs/modernizr-1.7.min.js')  %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container" class="container_12">
    <header>
      <div class="nav grid_12">
        <% if current_user %>
          Welcome <%= current_user.email %>
          <%= link_to "Log out", log_out_path %>
        <% else %>
          <%#= link_to "Sign up", sign_up %> or
          <%#= link_to "log in", log_in_path %>
        <% end %>
      </div>
      <div class="clear"></div>
      <div id="logo" class="grid_12">
        <h1>LayAR Service Provider</h1>
      </div>
    </header>
    <div id="main" role="main">
      <%= yield %>
    </div><!-- #main -->
    <footer>

    </footer>
  </div><!-- #container -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.js"></script>
  <script>window.jQuery || document.write("<script src='/javascripts/libs/jquery-1.5.2.min.js'>\x3C/script>")</script>
  
</body>
</html>
